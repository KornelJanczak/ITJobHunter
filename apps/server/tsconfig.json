{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "noImplicitAny": true,
    "outDir": "dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  },

  "include": [
    "./**/*.ts",
    "./**/*.d.ts",
    // "./cypress/**/*.ts",
    "./src/**/*.ts",
    "**/*.ts",
    "."
  ],
  "exclude": ["node_modules", "dist", "build"]
}
